{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["jest", "@types/jest"],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    }
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
